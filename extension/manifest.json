{
  "name": "VK Like Abuser",
  "description": "Автоматическая накрутка лайков на страницу ВКонтакте.",
  "version": "0.2.9",
  "manifest_version": 2,
  "icons": {
    "128": "icon.png"
  },
  "browser_action": {
     "default_icon": "icon.png",
     "default_title": "Lets abuse some likes"
   },
  "permissions": [
    "tabs",
    "storage",
    "https://api.vk.com/*"
  ],
  "background": {
    "scripts": ["src/common.js", "src/graph.js", "scripts/options.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/firebase.js", "scripts/socket.io.js", "src/background.js"]
    },
    {
      "matches": ["*://*/index.html"],
      "css": ["styles.css"],
      "js": ["scripts/d3.v4.min.js", "scripts/vue.js", "scripts/vuefire.js"]
    }
  ],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'"
}
